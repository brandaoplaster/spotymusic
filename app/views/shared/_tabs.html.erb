<div class="tabs is-medium is-centered shared">
  <ul>
    <% if albums %>
      <li class="is-active">
        <a target="#albums">Àlbums</a>
      </li>
    <% end %>

    <% if artists %>
      <li>
        <a target="#artists">Artistas</a>
      </li>
    <% end %>

    <% if songs %>
      <li>
        <a target="#songs">Músicas</a>
      </li>
    <% end %>
  </ul>
</div>

<div class="table-content">
  <% if albums %>
    <div class="tab-item active" id="albums">
      <div class="columns is-mobile is-multiline">
        <%= render albums %>
      </div>
    </div>
  <% end %>

  <% if artists %>
    <div class="tab-item" id="artists">
      <div class="columns is-mobile is-multiline">
        <%= render artists %>
      </div>
    </div>
  <% end %>

  <% if songs %>
    <div class="tab-item" id="songs">
      <div class="columns is-multiline">
        <div class="column is-12">
          <button class="button is-primary is-medium" id="play-all">
            <span class="icon">
              <i class="fas fa-play-circle"></i>
            </span>
          </button>
        </div>
        <%= render songs %>
      </div>
    </div>
  <% end %>
</div>