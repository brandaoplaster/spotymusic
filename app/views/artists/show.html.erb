<section class="section has-text-white">
    <div class="columns is-text-centered">
        <div class="column is-half-mobile is-offset-one-quarter-mobile is-desktop is-offset-5-desktop">
            <%= image_tag url_for(@artist.image) %>
            <p class="is-size-6 has-text-weight-semibild">
                <%= @artist.name %>
            </p>
        </div>
    </div>
    
    <br />

    <h2 class="is-size-5 has-text-weight-bold">
        Albums
    </h2>

    <br />

    <div class="columns is-mobile is-multiline has-text-centered">
        <%= render @artist.albums %>
    </div>  
</section>